<UserControl x:Class="BookCollector.Views.Screens.CollectionsScreenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:BookCollector.ViewModels.Screens"
             mc:Ignorable="d" 
             d:DesignHeight="300"
             d:DesignWidth="300"
             d:DataContext="{d:DesignInstance vm:CollectionsScreenViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ListBox Grid.Row="0"
                 Grid.Column="1"
                 Margin="0,50,0,0"
                 ItemsSource="{Binding CollectionDescriptions}"
                 SelectedItem="{Binding SelectedCollectionDescription}">
            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                    <Setter Property="ContentTemplate" Value="{StaticResource DescriptionListView}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource MaterialDesignDivider}"/>
                    <Setter Property="BorderThickness" Value="{StaticResource ListItemBorderThickness}"/>
                    <Setter Property="Padding" Value="{StaticResource ListItemPadding}"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="ContentTemplate" Value="{StaticResource DescriptionDetailsView}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <StackPanel Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,0,0,150"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left">
            <Button Content="Continue"
                    MinWidth="{StaticResource MinButtonWidth}"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Command="{Binding ContinueCommand}"/>
            <Button Content="Cancel"
                    Margin="{StaticResource ButtonLeftMargin}"
                    MinWidth="{StaticResource MinButtonWidth}"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Command="{Binding CancelCommand}"/>
        </StackPanel>

        <md:PopupBox Grid.Row="0"
                     Grid.RowSpan="2"
                     Grid.Column="2"
                     Style="{StaticResource MaterialDesignMultiFloatingActionAccentPopupBox}"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Bottom"
                     Margin="{StaticResource ActionButtonMargin}">
            <StackPanel>
                <Button ToolTip="Edit"
                        Command="{Binding EditCommand}">
                    <md:PackIcon Kind="Pencil"/>
                </Button>
                <Button ToolTip="Add"
                        Command="{Binding AddCommand}">
                    <md:PackIcon Kind="PlusCircle"/>
                </Button>
                <Button ToolTip="Delete"
                        Command="{Binding DeleteCommand}">
                    <md:PackIcon Kind="MinusCircle"/>
                </Button>
            </StackPanel>
        </md:PopupBox>
    </Grid>
</UserControl>
