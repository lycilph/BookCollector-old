<UserControl x:Class="BookCollector.Screens.Import.Dialog.ImportProviderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dialog="clr-namespace:BookCollector.Screens.Import.Dialog"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="300" 
             d:DesignWidth="300" 
             d:DataContext="{d:DesignInstance dialog:ImportProviderViewModel}">
    <Button Content="{Binding DisplayName}"
            Style="{StaticResource ChromelessButtonStyle}" 
            FontSize="{StaticResource SidebarItemFontSize}" 
            HorizontalAlignment="Left"
            cal:Message.Attach="[Click] = [Select($dataContext)]"/>
</UserControl>
