<UserControl x:Class="BookCollector.Screens.Start.CollectionDescriptionSelectedView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookCollector.Screens.Start"
             mc:Ignorable="d" 
             d:DesignHeight="300"
             d:DesignWidth="300"
             d:DataContext="{d:DesignInstance local:CollectionDescriptionViewModel}"
             ToolTip="{Binding Filename}">
    <StackPanel>
        <TextBlock Text="{Binding Name}" FontSize="20"/>
        <TextBlock Text="{Binding Description}" Margin="20,0,0,0"/>
        <TextBlock Text="Books in collection: xx" Margin="20,0,0,0"/>
        <TextBlock Margin="20,0,0,0">
            <Run Text="Last Modified: "/>
            <Run Text="{Binding LastModfied, Mode=OneWay}"/>
        </TextBlock>
    </StackPanel>
</UserControl>
