<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:start="clr-namespace:BookCollector.Screens.Start"
                    xmlns:main="clr-namespace:BookCollector.Screens.Main">
    <!-- Bindings for the start screen -->
    <DataTemplate DataType="{x:Type start:StartViewModel}">
        <start:StartView/>
    </DataTemplate>

    <DataTemplate x:Key="CollectionDescriptionList">
        <start:CollectionDescriptionListView/>
    </DataTemplate>

    <DataTemplate x:Key="CollectionDescriptionSelected">
        <start:CollectionDescriptionSelectedView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type start:CollectionDialogViewModel}">
        <start:CollectionDialogView/>
    </DataTemplate>

    <!-- Bindings for the main screen -->
    <DataTemplate DataType="{x:Type main:MainViewModel}">
        <main:MainView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type main:BookViewModel}">
        <main:BookView/>
    </DataTemplate>

    <DataTemplate x:Key="BookDetails">
        <main:BookDetailView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type main:MainToolsViewModel}">
        <main:MainToolsView/>
    </DataTemplate>
</ResourceDictionary>